<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/course.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <title>Document</title>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container">
        <h1>Listado de estudiantes: <%= students.length %></h1>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Apellido</th>
                        <th>Nombre</th>
                        <th>Ciudad</th>
                        <th>Provincia</th>
                        <th>Email</th>
                        <th>PDF</th>
                    </tr>
                </thead>
                <tbody>
                   <% students.forEach((student,index) => {%>
                    <tr id="invoce">
                        <td><%= index + 1 %></td>
                        <td><%= student.last_name %></td>
                        <td><%= student.first_name %></td>
                        <td><%= student.city %></td>
                        <td><%= student.province %></td>
                        <td><%= student.email %></td>
                        <td>
                            <button  onclick="generarPDF('<%= student.last_name %>','<%= student.first_name %>','<%= student.city%>','<%= student.province%>','<%= student.email %>')" class="pdf">
                                <i class="fa-solid fa-file-pdf"></i>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
<script src="/javascripts/generatepdf.js"></script>
</html>
