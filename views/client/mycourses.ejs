<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/course.css' />

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Document</title>
</head>

<body>
    <%- include('../partials/navigation.ejs') %>
        <div class="container">
            <% if(courses.length==0) { %>
                <h1 class="title">No te inscribite a ning√∫n curso</h1>
            <% } else { %>
                <h1 class="title">Cantidad de cursos: <%= courses.length %></h1>
            <% } %>

            <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre del curso</th>
                                <th>Comienzo del curso</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% courses.forEach((course,index) => { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= course.title %></td>
                                    <td><%= course.start.toLocaleDateString() %></td>
                                    <td>
                                      <a onclick="bajarme()" data-parametro="<%= course.id %>" class="bajarme">Darme de baja</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        <%- include('../partials/footer.ejs') %>

</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/javascripts/outCourse.js"></script>

</html>