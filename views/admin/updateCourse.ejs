<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/createcourse.css' />

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/navigation.ejs') %>
    <div class="container">
        <h1>Update course</h1>
        <form action="/update-course" method="post" enctype="multipart/form-data"> 
            <input type="hidden" value="<%= course[0].id %>" name="id">
            <input type="hidden" value="<%= course[0].image %>" name="imagesAncient">
            <div class="form-group">
                <div class="form-group-input">
                    <label for="title">Title</label>
                    <input type="text" class="form-group-input-text" value="<%= course[0].title %>" name="title" placeholder="Enter title">
                </div>
                <div class="form-group-input">
                    <label for="">Select category</label>
                    <select name="category" id="">
                        <option value="<%= course[0].categoryId %>" selected hidden><%= course[0].category %></option>
                        <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.title %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-input">
                    <label for="">Visibility</label>
                    <div class="form-group-radio">
                        <% if(course[0].enabled) { %>
                            <input name="enabled" type="radio" id="true" value="1" checked><label for="true">True</label> 
                            <input name="enabled" type="radio" id="false" value="0"> <label for="false">False</label>
                        <% } else { %>
                            <input name="enabled" type="radio" id="true" value="1"><label for="true">True</label> 
                            <input name="enabled" type="radio" id="false" value="0" checked> <label for="false">False</label>
                        <% } %>
                    </div>
                </div>                
                <div class="form-group-input">
                    <label for="">State</label>
                    <select name="state" id="">
                        <option value="<%= course[0].state %>" disabled><%= course[0].state %></option>
                        <option value="active">Active</option>
                        <option value="deleyed">Delaye</option>
                        <option value="inactive">Inactive</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group-input">
                    <label for="">Image</label>
                    <input type="file" name="image" value="<%= course[0].image %>">
                </div>                
                <div class="form-group-input">
                    <label for="">Start course</label>
                    <input type="date" value="<%= fecha %>" name="start" class="form-group-input-text">
                </div>
            </div>
            <div  class="form-group">
                <div class="form-group-input w-70">
                    <label for="">Description</label>
                    <textarea name="description" id="" cols="30" rows="10">
                        <%= course[0].description.trimStart() %>
                    </textarea>
                </div>                
            </div>
            <div class="form-group-buttom">
                <input type="submit" value="Update course" class="buttom">
            </div>

        </form>
    </div>
</body>
</html>